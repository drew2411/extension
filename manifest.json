{
  "manifest_version": 3,
  "name": "Custom Content Blocker: Improve Productivity",
  "version": "2.0",
  "description": "Block custom content on Reddit and YouTube. Includes full website blocking, homepage-only blocking. Requires user-provided Groq API Key.",
  "permissions": [
    "storage",
    "tabs",
    "scripting",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.reddit.com/*",
    "https://api.groq.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Selective Content Blocker"
  },
  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/r/*"],
      "js": ["reddit.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "logo_16.png",
    "32": "logo_32.png",
    "48": "logo_48.png",
    "128": "logo_128.png"
  }

}